# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# All Node Request routes
POST    /v1/node/create                   controllers.node.NodeController.createNode()

POST    /v1/node/update                   controllers.node.NodeController.updateNode()

POST    /v1/node/delete                   controllers.node.NodeController.deleteNode()

# All Node Relation Request routes
POST    /v1/node/relation/create          controllers.relation.NodeRelationController.createNodeRelation()

POST    /v1/node/relation/update          controllers.relation.NodeRelationController.updateNodeRelation()

POST    /v1/node/relation/delete          controllers.relation.NodeRelationController.deleteNodeRelation()

# All JWT Authentication Request routes
POST    /v1/auth/create                   controllers.auth.AuthenticationController.createUserToken()
